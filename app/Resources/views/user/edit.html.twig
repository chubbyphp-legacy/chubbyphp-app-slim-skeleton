{% extends "@SlimSkeleton/baselayout.html.twig" %}

{% import "@SlimSkeleton/_form.html.twig" as forms %}

{% block container %}
    <div class="row">
        <div class="col-xs-12">
            <h1>{{ "user.title.edit"|trans(locale) }}</h1>
            <form action="{{ path_for('user_edit', {'id': user.id}) }}" method="post" class="form-horizontal">
                {{ forms.renderInputText(user, 'email', 'user.label.email'|trans(locale), errorMessages) }}
                {{ forms.renderInputPassword(user, 'password', 'user.label.password'|trans(locale), errorMessages) }}
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-success" name="save" value="save" title="{{ "user.label.save"|trans(locale) }}">
                            <i class="glyphicon glyphicon-save"></i>
                        </button>
                        <a class="btn btn-default" href="{{ path_for('user_list') }}" title="{{ "user.action.list"|trans(locale) }}">
                            <i class="glyphicon glyphicon-list-alt"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
