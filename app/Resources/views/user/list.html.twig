{% extends "@SlimSkeleton/baselayout.html.twig" %}

{% block container %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Users</h1>
            <a class="btn btn-default" href="{{ path_for('user_create') }}" title="create">
                <i class="glyphicon glyphicon-plus"></i>
            </a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a href="{{ path_for('user_edit', {'id': user.id}) }}" type="button" class="btn btn-default btn-sm" title="edit">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                </a>
                                <a href="{{ path_for('user_view', {'id': user.id}) }}" type="button" class="btn btn-default btn-sm" title="view">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                </a>
                                <form action="{{ path_for('user_delete', {'id': user.id}) }}" method="post" class="inline-form">
                                    <button type="submit" class="btn btn-danger btn-sm" title="remove">
                                        <i class="glyphicon glyphicon-remove"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
